// संख्या परीक्षा - Number System Tests
// Comprehensive tests for the Sanskrit number system

आयात परीक्षा;
आयात संख्या;
आयात गणित;
आयात चित्;
आयात धर्म;
आयात शब्द;
आयात सूत्र;
आयात योग;
आयात न्याय;
आयात वैशेषिक;

वर्गः संख्यापरीक्षा {
    // Test basic number creation
    क्रिया मूलपरीक्षा() {
        संख्या क = नव संख्या(५);
        परीक्षा.समानम्(क.मूल्यम्, ५);
        परीक्षा.समानम्(क.प्रकारः, "पूर्णाङ्कः");
    }
    
    // Test arithmetic operations
    क्रिया गणितपरीक्षा() {
        संख्या क = नव संख्या(५);
        संख्या ख = नव संख्या(३);
        
        // Addition
        योगफलम् = क.योगः(ख);
        परीक्षा.समानम्(योगफलम्.मूल्यम्, ८);
        
        // Subtraction
        अन्तरम् = क.व्यवकलनम्(ख);
        परीक्षा.समानम्(अन्तरम्.मूल्यम्, २);
        
        // Multiplication
        गुणितम् = क.गुणनम्(ख);
        परीक्षा.समानम्(गुणितम्.मूल्यम्, १५);
        
        // Division
        भागफलम् = क.भागः(ख);
        परीक्षा.समानम्(भागफलम्.मूल्यम्, १.६६६६६६६६६६६६६७);
    }
    
    // Test Sanskrit numeral conversion
    क्रिया संस्कृतरूपपरीक्षा() {
        संख्या क = नव संख्या(१२३);
        परीक्षा.समानम्(क.संस्कृतरूपम्(), "१२३");
    }
    
    // Test Sanskrit word conversion
    क्रिया मौखिकपरीक्षा() {
        संख्या क = नव संख्या(५);
        परीक्षा.समानम्(क.मौखिकम्(), "पञ्च");
    }
    
    // Test special numbers
    क्रिया विशेषसंख्यापरीक्षा() {
        // Test zero
        परीक्षा.समानम्(शून्यम्.मूल्यम्, ०);
        परीक्षा.समानम्(शून्यम्.मौखिकम्(), "शून्य");
        
        // Test one
        परीक्षा.समानम्(एकम्.मूल्यम्, १);
        परीक्षा.समानम्(एकम्.मौखिकम्(), "एक");
        
        // Test infinity
        परीक्षा.सत्यम्(अनन्तः.मूल्यम् > १००००००);
    }
    
    // Test error handling
    क्रिया त्रुटिपरीक्षा() {
        संख्या क = नव संख्या(५);
        संख्या ख = नव संख्या(०);
        
        प्रयत्न {
            क.भागः(ख);
            परीक्षा.विफलम्("Should throw division by zero error");
        } रक्षण (त्रुटिः) {
            परीक्षा.समानम्(त्रुटिः.सन्देशः, "शून्येन भागो न सम्भवति");
        }
    }

    // Test advanced mathematical operations
    क्रिया उन्नतगणितपरीक्षा() {
        संख्या क = नव संख्या(१६);
        
        // Square root
        वर्गमूलम् = क.वर्गमूलम्();
        परीक्षा.समानम्(वर्गमूलम्.मूल्यम्, ४);
        
        // Cube
        घनम् = क.घनम्();
        परीक्षा.समानम्(घनम्.मूल्यम्, ४०९६);
        
        // Trigonometric functions
        संख्या कोणः = नव संख्या(गणित.पाई / २);
        ज्याफलम् = कोणः.ज्या();
        परीक्षा.सन्निकटम्(ज्याफलम्.मूल्यम्, १.०, ०.०००००१);
        
        कोज्याफलम् = कोणः.कोज्या();
        परीक्षा.सन्निकटम्(कोज्याफलम्.मूल्यम्, ०.०, ०.०००००१);
    }
    
    // Test rational numbers
    क्रिया भिन्नसंख्यापरीक्षा() {
        संख्या क = नव संख्या(३, "भिन्नः");
        क.हरः = ४;  // 3/4
        
        संख्या ख = नव संख्या(१, "भिन्नः");
        ख.हरः = २;  // 1/2
        
        योगफलम् = क.योगः(ख);  // 3/4 + 1/2
        परीक्षा.समानम्(योगफलम्.भिन्नरूपम्(), "५/४");
        
        गुणितम् = क.गुणनम्(ख);  // 3/4 * 1/2
        परीक्षा.समानम्(गुणितम्.भिन्नरूपम्(), "३/८");
    }
    
    // Test complex numbers
    क्रिया मिश्रसंख्यापरीक्षा() {
        संख्या क = नव संख्या(३, "मिश्रः");
        क.काल्पनिकः = २;  // 3 + 2i
        
        संख्या ख = नव संख्या(१, "मिश्रः");
        ख.काल्पनिकः = ४;  // 1 + 4i
        
        योगफलम् = क.मिश्रयोगः(ख);  // (3 + 2i) + (1 + 4i)
        परीक्षा.समानम्(योगफलम्.वास्तविकः, ४);
        परीक्षा.समानम्(योगफलम्.काल्पनिकः, ६);
    }
    
    // Test enhanced conversions
    क्रिया विस्तृतरूपान्तरपरीक्षा() {
        संख्या क = नव संख्या(१२३४५);
        
        // Test Devanagari conversion
        परीक्षा.समानम्(क.देवनागरीरूपम्(), "१२३४५");
        
        // Test Vedic number representation
        वैदिकम् = क.वैदिकरूपम्();
        परीक्षा.सत्यम्(वैदिकम्.आधारितम्("सहस्र"));
        
        // Test rational number conversion
        संख्या ख = नव संख्या(०.५);
        परीक्षा.समानम्(ख.भिन्नरूपम्(), "१/२");
    }
    
    // Test mathematical constants
    क्रिया नियतांकपरीक्षा() {
        परीक्षा.सन्निकटम्(पाई.मूल्यम्, ३.१४१५९२६५३५८९७९३, ०.००००००१);
        परीक्षा.सन्निकटम्(ई.मूल्यम्, २.७१८२८१८२८४५९०४५, ०.००००००१);
        परीक्षा.सन्निकटम्(स्वर्णानुपातः.मूल्यम्, १.६१८०३३९८८७४९८९५, ०.००००००१);
    }

    // Test spiritual number creation and operations
    क्रिया आध्यात्मिकसंख्यापरीक्षा() {
        // Test spiritual number creation
        संख्या ॐसंख्या = नव संख्या("ॐ", "आध्यात्मिकः");
        परीक्षा.समानम्(ॐसंख्या.प्रकारः, "आध्यात्मिकः");
        परीक्षा.सत्यम्(ॐसंख्या.चेतना.सक्रियम्());
        
        // Test consciousness elevation
        ॐसंख्या.चेतना.उन्नयनम्();
        परीक्षा.सत्यम्(ॐसंख्या.चेतना.उन्नतस्तरः());
        
        // Test spiritual constants
        परीक्षा.सत्यम्(ॐ.आध्यात्मिकः());
        परीक्षा.सत्यम्(पूर्णम्.आध्यात्मिकः());
        परीक्षा.सत्यम्(शान्तिः.आध्यात्मिकः());
    }
    
    // Test consciousness-aware operations
    क्रिया चेतनक्रियापरीक्षा() {
        संख्या क = नव संख्या(५);
        संख्या ख = नव संख्या(३);
        
        // Test consciousness combination in addition
        योगफलम् = क.योगः(ख);
        परीक्षा.सत्यम्(योगफलम्.चेतना.सक्रियम्());
        
        // Test consciousness elevation in operations
        वर्गमूलम् = क.वर्गमूलम्();
        परीक्षा.सत्यम्(वर्गमूलम्.चेतना.स्तरः() > क.चेतना.स्तरः());
    }
    
    // Test sound-based computations
    क्रिया ध्वनिगणितपरीक्षा() {
        संख्या क = नव संख्या(५);
        
        // Test sound pattern generation
        ध्वनिः = क.ध्वनिः;
        परीक्षा.सत्यम्(ध्वनिः.मान्यम्());
        
        // Test sound combination in operations
        संख्या ख = नव संख्या(३);
        योगफलम् = क.योगः(ख);
        परीक्षा.सत्यम्(योगफलम्.ध्वनिः.सामञ्जस्यम्());
    }
    
    // Test ethical validation
    क्रिया नैतिकपरीक्षा() {
        प्रयत्न {
            // Try to create number with unethical value
            संख्या अनैतिकः = नव संख्या(-१०८);
            परीक्षा.विफलम्("Should throw ethical violation error");
        } रक्षण (त्रुटिः) {
            परीक्षा.समानम्(त्रुटिः.सन्देशः, "अनैतिकमूल्यम्");
        }
        
        // Test ethical number creation
        संख्या नैतिकः = नव संख्या(१०८);
        परीक्षा.सत्यम्(धर्म.नैतिकपरीक्षा(नैतिकः.मूल्यम्));
    }
    
    // Test sacred geometry in conversions
    क्रिया पवित्रज्यामितिपरीक्षा() {
        संख्या क = नव संख्या(१०८);
        
        // Test Devanagari conversion with sacred geometry
        देवनागरी = क.देवनागरीरूपम्();
        परीक्षा.सत्यम्(शब्द.पवित्रज्यामितिसत्यापनम्(देवनागरी));
        
        // Test sound pattern in conversion
        ध्वनिः = शब्द.अक्षरध्वनिः(देवनागरी);
        परीक्षा.सत्यम्(ध्वनिः.पवित्रम्());
    }

    // Test Vedic mathematics operations
    क्रिया वैदिकगणितपरीक्षा() {
        संख्या क = नव संख्या(१०८, "वैदिकः");
        संख्या ख = नव संख्या(२१६, "वैदिकः");
        
        // Test Vedic addition
        फलम् = क.वैदिकगणितम्("योगः", ख);
        परीक्षा.समानम्(फलम्.मूल्यम्, ३२४);
        परीक्षा.सत्यम्(सूत्र.वैदिकसत्यापनम्(फलम्));
        
        // Test Vedic multiplication
        फलम् = क.वैदिकगणितम्("गुणनम्", ख);
        परीक्षा.समानम्(फलम्.मूल्यम्, २३३२८);
        परीक्षा.सत्यम्(सूत्र.एकाधिकेनपूर्वेणसत्यापनम्(फलम्));
    }
    
    // Test Yantra-based operations
    क्रिया यन्त्रगणितपरीक्षा() {
        संख्या क = नव संख्या(९, "यन्त्रः");
        
        // Test sacred geometry transformation
        यन्त्रम् = क.यन्त्रगणितम्();
        परीक्षा.सत्यम्(सूत्र.यन्त्रसत्यापनम्(यन्त्रम्));
        परीक्षा.समानम्(यन्त्रम्.कोणाः(), ९);
    }
    
    // Test Mantra-based operations
    क्रिया मन्त्रगणितपरीक्षा() {
        संख्या क = नव संख्या("ॐ", "मन्त्रः");
        
        // Test sound pattern generation
        मन्त्रः = क.मन्त्रगणितम्();
        परीक्षा.सत्यम्(सूत्र.मन्त्रसत्यापनम्(मन्त्रः));
        परीक्षा.सत्यम्(मन्त्रः.नादशक्तिः());
    }
    
    // Test Sutra integration in arithmetic
    क्रिया सूत्रगणितपरीक्षा() {
        संख्या क = नव संख्या(१०८);
        संख्या ख = नव संख्या(२१६);
        
        // Test Sutra-based addition
        योगफलम् = क.योगः(ख);
        परीक्षा.सत्यम्(न्याय.प्रमाणसत्यापनम्(योगफलम्.प्रमाणम्));
        परीक्षा.सत्यम्(वैशेषिक.गुणसत्यापनम्(योगफलम्.गुणाः));
    }
    
    // Test advanced spiritual transformations
    क्रिया आध्यात्मिकपरिवर्तनपरीक्षा() {
        संख्या क = नव संख्या(१०८, "आध्यात्मिकः");
        
        // Test spiritual transformation
        फलम् = क.आध्यात्मिकपरिवर्तनम्();
        
        // Verify yogic state
        परीक्षा.सत्यम्(योग.ध्यानस्थितिः(फलम्.वृत्तयः));
        
        // Verify sacred geometry
        परीक्षा.सत्यम्(सूत्र.यन्त्रसत्यापनम्(फलम्.यन्त्रम्));
        
        // Verify mantra effects
        परीक्षा.सत्यम्(सूत्र.मन्त्रसत्यापनम्(फलम्.मन्त्रः));
        
        // Verify consciousness elevation
        परीक्षा.सत्यम्(फलम्.चेतना.स्तरः() > क.चेतना.स्तरः());
    }
    
    // Test Vedic mathematics constants
    क्रिया वैदिकनियतांकपरीक्षा() {
        परीक्षा.सत्यम्(एकाधिकेन.वैदिकः());
        परीक्षा.सत्यम्(निखिलम्.वैदिकः());
        परीक्षा.सत्यम्(ऊर्ध्वतिर्यक्.वैदिकः());
        
        // Test Vedic properties
        परीक्षा.सत्यम्(सूत्र.एकाधिकेनसत्यापनम्(एकाधिकेन));
        परीक्षा.सत्यम्(सूत्र.निखिलसत्यापनम्(निखिलम्));
        परीक्षा.सत्यम्(सूत्र.ऊर्ध्वतिर्यक्सत्यापनम्(ऊर्ध्वतिर्यक्));
    }
    
    // Test Nyaya validation
    क्रिया न्यायप्रमाणपरीक्षा() {
        प्रयत्न {
            // Try to create invalid number
            संख्या अमान्यः = नव संख्या("अमान्यम्");
            परीक्षा.विफलम्("Should throw validation error");
        } रक्षण (त्रुटिः) {
            परीक्षा.समानम्(त्रुटिः.सन्देशः, "अमान्यमूल्यम्");
        }
        
        // Test valid number creation
        संख्या मान्यः = नव संख्या(१०८);
        परीक्षा.सत्यम्(न्याय.प्रमाणपरीक्षा(मान्यः.मूल्यम्));
    }
    
    // Test Vaisheshika properties
    क्रिया वैशेषिकगुणपरीक्षा() {
        संख्या क = नव संख्या(१०८);
        
        // Test property determination
        गुणाः = वैशेषिक.गुणनिर्धारणम्(क.मूल्यम्);
        परीक्षा.सत्यम्(वैशेषिक.गुणसत्यापनम्(गुणाः));
        
        // Test property inheritance
        योगफलम् = क.योगः(नव संख्या(२१६));
        परीक्षा.सत्यम्(वैशेषिक.गुणसम्बन्धः(क.गुणाः, योगफलम्.गुणाः));
    }
}

// Run all tests
क्रिया मुख्य() {
    परीक्षा = नव संख्यापरीक्षा();
    परीक्षा.सर्वपरीक्षा();
} 